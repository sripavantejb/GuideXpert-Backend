PORT=5000
# Use your Atlas connection string, or local: mongodb://localhost:27017/guidexpert
# If Atlas fails (IP not whitelisted): add your IP in Atlas â†’ Network Access, or set MONGODB_URI_FALLBACK for local MongoDB
MONGODB_URI=mongodb://localhost:27017/guidexpert
# MONGODB_URI_FALLBACK=mongodb://localhost:27017/guidexpert
GUPSHUP_API_KEY=your_api_key_here
GUPSHUP_SANDBOX_SOURCE=917834811114
OTP_SECRET=strong_random_string
FRONTEND_URL=http://localhost:5173

# Admin panel (JWT secret required for login; run scripts/seedAdmin.js to create first admin)
ADMIN_JWT_SECRET=your_strong_random_jwt_secret_here
# Optional: for seedAdmin.js (otherwise script will prompt)
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=your_secure_password

# Google Sheets (service account)
# Option A: Path to service account JSON file (e.g. config/sheets-service-account.json)
# Share the Google Sheet with the service account email and give Editor access.
GOOGLE_APPLICATION_CREDENTIALS=config/sheets-service-account.json
# Option B: Full JSON as a single line (for production; keep .env out of Git)
# GOOGLE_SHEETS_CREDENTIALS_JSON={"type":"service_account",...}

GOOGLE_SHEET_ID=your_sheet_id_from_url
GOOGLE_SHEET_RANGE=Sheet1
